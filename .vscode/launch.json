{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Main Application",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/src",
      "python": "/measdata/dpi/venv/dpi/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "PYTHONUNBUFFERED": "1"
      }
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/src",
      "python": "/measdata/dpi/venv/dpi/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "PYTHONUNBUFFERED": "1"
      }
    },
    {
      "name": "Python: Current File with Args",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}/src",
      "python": "/measdata/dpi/venv/dpi/bin/python",
      "args": [],
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "PYTHONUNBUFFERED": "1"
      }
    }
  ]
}